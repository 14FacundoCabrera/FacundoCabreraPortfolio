---
import placeholderImage from '../assets/placeholderImage.jpg';
import "../styles/global.css";
import { getCollection, render } from 'astro:content';

const presentation = await getCollection('presentation');
const entry = presentation[0];
const { Content } = await render(entry);
---

<div class="min-h-screen w-full flex justify-center items-center p-10 ">
  <section class="max-w-3xl flex flex-col sm:flex-row items-center gap-8 border-2 p-2 rounded-2xl border-black/25 bg-slate-900 scroll-fade fixed">

    <div class="flex-shrink-0">
      <img src={placeholderImage.src} alt="Foto de perfil" class="size-48 object-cover rounded-full border-2" />
    </div>

    <div class="text-center sm:text-left">
      <h1 class="text-3xl font-bold mb-4">{entry.data.title}</h1>
      {entry && <Content/>}
    </div>

  </section>
</div>

<style>
.scroll-fade {
  animation: fadeOut linear;
  animation-timeline: scroll();
  animation-range:  0%  25%;
}
</style>